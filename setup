#!/bin/sh

set -e

ln -sf "$PWD/.bashrc" "$HOME/.bashrc"
ln -sf "$PWD/.inputrc" "$HOME/.inputrc"
ln -sf "$PWD/.profile" "$HOME/.profile"
ln -sf "$PWD/.profile" "$HOME/.bash_profile"

# for user custom directory path
[ -r $HOME/.config ] || mkdir $HOME/.config
ln -sf "$PWD/user-dirs.dirs" "$HOME/.config/user-dirs.dirs" && echo '[*] Symlink successful.'

program="vim tmux x11 dunst lynx gh git sxiv fontconfig"
for i in $program; do
    cd $i && ./setup
    cd -
done
