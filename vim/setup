#!/bin/sh

[ -z "$(which vim)" -o -z "$(which vimtutor)" ] && echo "\e[1;31mWarning\e[0m
Need to have the full version of vim."

ln -sf "$PWD/.vimrc" "$HOME/.vimrc"
dir=$(mkdir -p $HOME/.vim/{autoload,colors})
[ -z "$HOME/.vim" ] && $dir
# for some reason symlinking plug.vim does not work
cp "$PWD/.vim/autoload/plug.vim" "$HOME/.vim/autoload/plug.vim"
ln -sf "$PWD/.vim/colors/paramount.vim" "$HOME/.vim/colors/paramount.vim"
